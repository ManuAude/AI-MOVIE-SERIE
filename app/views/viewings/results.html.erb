

<div class="container mx-auto" data-controller="search">
  <div class="flex flex-col items-center gap-4">
    <h1 class="text-violet-900 text-[30px]">Rechercher des films</h1>
    <div class="">
      <%= form_with url: search_viewings_path, method: :get, data: {
        search_target: "form",
        action: "input->search#perform"
      } do |f| %>
        <%= f.text_field :query,
          placeholder: "Rechercher un film...",
          data: { search_target: "input" },
          autocomplete: "off",
          class: "border rounded-full py-3 px-5" %>
      <% end %>
    </div>
  </div>
  <div id="search_results" data-search-target="results">
    <!-- Les résultats apparaîtront ici -->
  </div>
</div>
